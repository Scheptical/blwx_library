@import "/pages/books/book_detail_vip/book_detail_vip.wxss";
@import "/pages/books/book_detail_vip/SetBookDetail/SetBookDetail.wxss";

.SettingInput {
    background-color: #fff;
    font-size: 34rpx;
    width: 100%;
    padding: 30rpx 60rpx 30rpx 30rpx;
    margin: 10rpx;
    word-break: break-all;
    word-wrap: break-word;
    min-height: 100rpx;
    max-height: 100%;
}

.SettingTextarea {
    background-color: #fff;
    font-size: 34rpx;
    width: 100%;
    padding: 30rpx 60rpx 30rpx 30rpx;
    margin: 10rpx;
    word-break: break-all;
    word-wrap: break-word;
    min-height: 200rpx;
    max-height: 100%;
}

.clearInputImg {
    width: 40rpx;
    height: 40rpx;
    position: fixed;
    right: 34rpx;
    margin: 0;
}

.arrow-downwards {
    width: 10px;
    height: 10px;
    border-top: 2px solid #999;
    border-right: 2px solid #999;
    position: fixed;
    right: 48rpx;
    transform: rotate(135deg);
    margin: 0
}

.inputbox-setting {
    display: flex;
    border-bottom: 8rpx solid #00d37d;
    border-radius: 20rpx;
    margin: 20rpx;
    background-color: #fff;
    align-items: center;
}

.detailName {
    font-size: 48rpx;
    font-weight: 900;
    width: max-content;
    background-image: linear-gradient(0deg, #00d37d 30%, transparent 30%);
    margin: 20rpx 0 20rpx 30rpx;
}

.detailSettingTitle {
    font-size: 28rpx;
    padding: 0 10rpx;
    margin: 0 10rpx;
}