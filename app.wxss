/**app.wxss**/

@import "icon.wxss";
@import "main.wxss";

page{
  background-color: #f5f7f6;
}
.selectedGreen{
  color: #00d37d;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.card{
  display: flex;
  color: black;
  flex-direction: column;
  flex-wrap: wrap;
  background-color: #ffffff;
  border-radius: 30rpx;
  box-shadow: 4px 4px 8px  rgba(49, 49, 49, 0.1);
  padding: 10px;
  margin-top: 10px;
  margin-left: 10px;
  margin-right: 10px;
}
.card-block{
  display: flex;
  color: black;
  flex-direction: column;
  flex-wrap: wrap;
  background-color: #ffffff;
  padding: 10rpx;
  margin-bottom: 12rpx;
}
.funcMenuManagerBox{
  padding: 0 5rpx;
  text-align: center;
}
.funcMenuManagerBar{
  padding: 0 5rpx;
  text-align: center;
}
.func-lib{
  display: inline-block;
  width: 120rpx;
  height: 120rpx;
  padding: 0 5rpx;
  margin:20rpx 20rpx 0rpx 20rpx;
  border-radius: 60px;
}
.func-lib-box-text{
  font-size: 26rpx;
  text-align: center;
}
.func-lib-box-img{
  width: 85rpx;
  height: 85rpx;
  margin: 20rpx 0 5rpx;
}
.func-lib-bar{
  display: flex;
  text-align: center;
  flex-direction: row;
  margin: 10rpx 0 10rpx;
}
.func-lib-bar-img{
  width: 90rpx;
  height: 90rpx;
  margin: 5rpx 10rpx 0 5rpx;
  padding: 5rpx 10rpx 0 5rpx;
  vertical-align: middle;
}
.func-lib-bar-text{
  font-size: 32rpx;
  text-align: center;
  vertical-align: middle;
  padding: 30rpx 0;
}
.divLine{
  background: #dddddd;
  height: 1rpx;
  width: 100%;
  margin-left: 15rpx;
}

